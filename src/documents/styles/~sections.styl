
// About
// ===========

section.about
    .title
        vhidden()
    .enphase
        column: 6
        color: darkgrey
        margin-top: gutterwidth * 1.75
        margin-bottom: gutterwidth * 1.75
        font-size: 20px
        font-style: italic
        text-align: center

// Schedule
// ===========

section.schedule
    thead th
        vhidden()
    .time
        column: 1
        font-size: 24px
        font-style: italic
        font-weight: 800
        text-align: right
    .slot
        column: 5
        margin-top: 6px
        margin-bottom: gutterwidth
        .talk
            font-size: 19px
            font-style: italic
            font-weight: 800
            margin-bottom: -4px
            position: relative
        .speaker
            font-style: italic
            margin-bottom: gutterwidth * .5
        .photo
            margin-right: gutterwidth
            float: left

    .other
        opacity: .6